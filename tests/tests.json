{
  "setups": {
    "default": {
      "posts": ["laserpost-lightburn", "laserpost-svg"],
      "options": {
        "quiet": "--quiet",
        "nobackup": "--nobackup",
        "noeditor": "--noeditor",
        "nointeraction": "--nointeraction",
        "timeout": ["--timeout", "1"]
      },
      "cnc": "cover-mm",
      "validators": {
        "lbrn-default": {
          "post": "laserpost-lightburn",
          "file": "*.lbrn",
          "validator": "xpath",
          "xpath": [
            { "query": "/LightBurnProject/@MirrorX", "required": true },
            "/LightBurnProject/@MirrorY",
            "/LightBurnProject/CutSetting",
            "/LightBurnProject/Shape"
          ],
          "regex": [
            {
              "regex": "DEBUG: Document units: (\\w+)",
              "require": ["mm"]
            }
          ]
        },
        "svg-default": {
          "post": "laserpost-svg",
          "file": "*.svg",
          "validator": "xpath",
          "xpath": [
            "/svg:svg[@version='1.1']/@width",
            "/svg:svg[@version='1.1']/@height",
            "/svg:svg[@version='1.1']/@viewbox",
            "/svg:svg/svg:g",
            { "query": "/svg:svg/svg:path", "required": false }
          ],
          "namespaces": { "svg": "http://www.w3.org/2000/svg" }
        },
        "txt-default": {
          "post": "*",
          "file": "*.txt",
          "validator": "text",
          "regex": [
            {
              "regex": "^Generated at: .*$",
              "replace": "Generated at: [DATE-REMOVED-TEST-FILTER]"
            }
          ]
        }
      },
      "properties": {
        "laserpost0500IncludeComments": "INCLUDE_COMMENTS_DEBUG"
      }
    },
    "default-inch": {
      "cnc": "cover-inch",
      "setup": "default"
    }
  },
  "tests": [
    {
      "name": "Default parameters - cover (mm)",
      "setup": "default"
    },
    {
      "name": "Default parameters - cover (inch)",
      "setup": "default-inch"
    },
    {
      "name": "Trace stock - cover (mm)",
      "setup": "default",
      "properties": {
        "work0100TraceStock": "1"
      }
    },
    {
      "name": "Work offset - cover (mm)",
      "setup": "default",
      "properties": {
        "work0200OffsetX": "100",
        "work0300OffsetY": "200"
      }
    }
  ]
}
