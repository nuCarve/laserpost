{
  "setups": {
    "default": {
      "posts": ["laserpost-lightburn", "laserpost-svg"],
      "options": {
        "quiet": "--quiet",
        "nobackup": "--nobackup",
        "noeditor": "--noeditor",
        "nointeraction": "--nointeraction",
        "timeout": ["--timeout", "1"]
      },
      "cnc": "cover",
      "validators": {
        "lbrn-default": {
          "post": "laserpost-lightburn",
          "file": "*.lbrn",
          "validator": "xpath",
          "xpath": [
            "/LightburnProject/(@MirrorX, @MirrorY)",
            "/LightBurnProject/Shape|/LightBurnProject/CutSetting"]
        },
        "svg-default": {
          "post": "laserpost-svg",
          "file": "*.svg",
          "validator": "xpath",
          "xpath": [
            "/svg[@version='1.1']/(@width, @height, @viewbox)",
            "/svg/g|/svg/path"
          ]
        },
        "txt-default": {
          "post": "*",
          "file": "*.txt",
          "validator": "text"
        }
      },
      "properties": {
        "work0100TraceStock": "0"
      }
    }
  },
  "tests": [
    {
      "name": "Default parameters cover",
      "setup": "default"
    },
    {
      "name": "Trace stock cover",
      "setup": "default",
      "properties": {
        "work0100TraceStock": "1"
      }
    },
    {
      "name": "Work offset cover",
      "setup": "default",
      "properties": {
        "work0200OffsetX": "100",
        "work0300OffsetY": "200"
      }
    }
  ]
}
